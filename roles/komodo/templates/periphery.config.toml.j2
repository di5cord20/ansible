# General server settings
port = {{periphery_port}}
repo_dir = "{{ repo_dir }}"
stack_dir = "{{ stack_dir }}"
stats_polling_rate = "{{ stacks_polling_rate }}"

{#-- Only add bind_ip for Komodo >= v1.17.1 --#}
{% if (komodo_version | regex_replace('^v', '')) is version('1.17.1', '>=') %}
